                                <option>5</option>
                            </select>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </form>
        <!-- /.col-lg-4 -->
        <div class="col-lg-4">
        </div>
        <!-- /.col-lg-4 -->
    </div>
</div>
