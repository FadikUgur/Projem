@{
    ViewBag.Title = "UrunList";
    Layout = "~/Views/Home/Home.cshtml";
}

    <div class="row">
        @using (var context = new MvcProjem.Models.VeriTabanı())
        {
            var query = from a in context.urunler select a;
            foreach (var item in query)
            {
            <div class="col-lg-3 col-md-3 col-xs-6" style="margin-top: 10px;">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @item.urunadi
                    </div>
                    <div class="panel-body">
                        @using (var vt = new MvcProjem.Models.VeriTabanı())
                        {
                            try{
                            var resim= from  a in vt.resimler where a.urunid==item.id select a;
                                if (resim.FirstOrDefault()==null)
                                {
                                <img src="~/Resimler/indir.png" class="col-lg-12 col-md-12 col-xs-12" style="height:180px;width:250px;"/>
                                }
                                <img src="@resim.FirstOrDefault().src" class="col-lg-12 col-md-12 col-xs-12" style="height:180px;width:250px;"/>
                            }
                            catch{
                                
                            }
                        
                        }
                        <div style="margin-top: 10px;">
                            <p>@item.aciklama</p>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-lg-6">
                                    @item.degeri
                                </div>
                                <div class="col-lg-3">
                                    <button type="button" class="btn btn-danger"><i class="fa fa-shopping-cart fa-fw"></i></button>
                                </div>
                                <div class="col-lg-3">
                                    <button type="button" class="btn btn-success"><i class="fa fa-search fa-fw"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        }
    </div>
